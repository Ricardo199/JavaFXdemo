<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText"/>
    <Button text="Hello!" onAction="#onHelloButtonClick"/>
    <Button text="Goodbye!" onAction="#onGoodbyeButtonClick"/>
    <AnchorPane stylesheets="@style.css">
        <Label text="Please enter your name:" styleClass="label-left" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0"/>
        <TextField fx:id="nameField" promptText="Enter your name" AnchorPane.topAnchor="30.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"/>
    </AnchorPane>
</VBox>
